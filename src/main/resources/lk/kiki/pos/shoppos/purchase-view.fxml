<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.kiki.pos.shoppos.ui.PurchaseController">

    <top>
        <VBox spacing="12">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>

            <Label text="Purchases / Stock In"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>

            <HBox spacing="10">
                <padding>
                    <Insets top="0" right="0" bottom="6" left="0"/>
                </padding>

                <Label text="Supplier:"/>
                <TextField fx:id="txtSupplier" promptText="Supplier name" prefWidth="250"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Search:"/>
                <TextField fx:id="txtSearch" promptText="Search by name or SKU..." prefWidth="300"/>
                <Button text="Search"
                        onAction="#onSearch"
                        styleClass="searchBtn"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox>
            <padding>
                <Insets top="8" right="0" bottom="0" left="0"/>
            </padding>

            <SplitPane dividerPositions="0.5">

                <!-- Products -->
                <TableView fx:id="tblProducts">
                    <columns>
                        <TableColumn fx:id="colSku" text="SKU" prefWidth="100"/>
                        <TableColumn fx:id="colName" text="Name" prefWidth="220"/>
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    </columns>
                </TableView>

                <!-- Purchase Cart -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8"/>
                    </padding>

                    <TableView fx:id="tblCart">
                        <columns>
                            <TableColumn fx:id="colCName" text="Item" prefWidth="200"/>
                            <TableColumn fx:id="colCQty" text="Qty" prefWidth="70"/>
                            <TableColumn fx:id="colCCost" text="Unit Cost" prefWidth="110"/>
                            <TableColumn fx:id="colCTotal" text="Line Total" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="TOTAL COST:" style="-fx-font-size:14px;"/>
                        <Label fx:id="lblTotal" text="0.00"
                               style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                    </HBox>

                    <HBox spacing="16" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="6" right="0" bottom="0" left="0"/>
                        </padding>

                        <Button text="Remove Item"
                                onAction="#onRemoveItem"
                                styleClass="dangerBtn"/>

                        <Button text="Save Purchase"
                                onAction="#onSavePurchase"
                                styleClass="primaryBtn"/>
                    </HBox>
                </VBox>

            </SplitPane>
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
