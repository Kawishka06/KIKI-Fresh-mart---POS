<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.kiki.pos.shoppos.ui.ProductsController">

    <top>
        <VBox spacing="10" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="lblTitle"
                   text="Products"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <HBox spacing="10">
                <TextField fx:id="txtSearch" promptText="Search by name or SKU..." HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#onSearch"/>
                <Button text="Refresh" onAction="#onRefresh"/>
                <Button text="Add Product" onAction="#onAddProduct"/>
                <Button text="Update Price" onAction="#onUpdatePrice"/>
                <Button text="Stock In" onAction="#onStockIn"/>
                <Button text="Stock Out (Loss)" onAction="#onStockOutLoss"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tblProducts">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colSku" text="SKU" prefWidth="90"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="220"/>
                <TableColumn fx:id="colCategory" text="Category" prefWidth="140"/>
                <TableColumn fx:id="colSellPrice" text="Sell Price" prefWidth="110"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                <TableColumn fx:id="colAvgCost" text="Avg Cost" prefWidth="110"/>
            </columns>
        </TableView>
    </center>

    <padding>
        <Insets top="0" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
