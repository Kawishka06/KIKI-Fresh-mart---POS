<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.kiki.pos.shoppos.ui.SalesController">

    <top>
        <VBox spacing="12">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>

            <Label text="Sales / Billing"
                   style="-fx-font-size:18px; -fx-font-weight:bold;"/>

            <HBox spacing="10">
                <padding>
                    <Insets top="0" right="0" bottom="6" left="0"/>
                </padding>

                <TextField fx:id="txtSearch"
                           promptText="Search product by name or SKU..."
                           HBox.hgrow="ALWAYS"
                           styleClass="searchField"/>

                <Button text="Search"
                        onAction="#onSearch"
                        styleClass="searchBtn"/>
            </HBox>
        </VBox>
    </top>


    <center>
        <VBox>
        <padding>
            <Insets top="8" right="0" bottom="0" left="0"/>
        </padding>
        <SplitPane dividerPositions="0.5">
            <!-- Products -->
            <TableView fx:id="tblProducts">
                <columns>
                    <TableColumn fx:id="colPSku" text="SKU" prefWidth="100"/>
                    <TableColumn fx:id="colPName" text="Name" prefWidth="220"/>
                    <TableColumn fx:id="colPPrice" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="colPStock" text="Stock" prefWidth="80"/>
                </columns>
            </TableView>

            <!-- Cart -->
            <VBox spacing="10">
                <TableView fx:id="tblCart">
                    <columns>
                        <TableColumn fx:id="colCName" text="Item" prefWidth="200"/>
                        <TableColumn fx:id="colCQty" text="Qty" prefWidth="60"/>
                        <TableColumn fx:id="colCPrice" text="Price" prefWidth="90"/>
                        <TableColumn fx:id="colCTotal" text="Total" prefWidth="110"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label text="TOTAL:" style="-fx-font-size:14px;"/>
                    <Label fx:id="lblTotal"
                           text="0.00"
                           style="-fx-font-size:18px; -fx-font-weight:bold;"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Remove Item"
                            onAction="#onRemoveItem"
                            styleClass="dangerBtn"/>

                    <Button text="Checkout"
                            onAction="#onCheckout"
                            styleClass="primaryBtn"/>

                </HBox>
            </VBox>
        </SplitPane>
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
